version: '3'
services:
  knot-exporter:
    image: biznetgio/knot-exporter:0.1.0
    restart: on-failure
    ports:
      - '9100:9100'
    environment:
      - KNOT_EXPORTER_LIBRARY_PATH=/usr/lib64/libknot.so.11.0.0
    volumes:
      - /usr/lib64/:/usr/lib64/
      - /var/run/knot/:/var/run/knot/:Z
    command: gunicorn exporter.main:app --bind :9100
